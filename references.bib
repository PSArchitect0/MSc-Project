   pages = {241-250},
   pmid = {15456951},
   publisher = {Springer},
   title = {Serum semicarbazide-sensitive amine oxidase (SSAO) activity correlates with VEGF in non-small-cell lung cancer patients},
   volume = {21},
   url = {https://link.springer.com/article/10.1385/MO:21:3:241},
   year = {2004},
