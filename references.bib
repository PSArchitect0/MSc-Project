   month = {6},
   pages = {20884-20896},
   pmid = {29893119},
   publisher = {American Chemical Society},
   title = {Multiscale Imaging of Brown Adipose Tissue in Living Mice/Rats with Fluorescent Polymer Dots},
   volume = {10},
