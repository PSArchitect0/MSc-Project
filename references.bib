   issue = {2},
   journal = {The Journal of pharmacology and experimental therapeutics},
   month = {5},
   pages = {563-72},
   pmid = {11303044},
   title = {Semicarbazide-sensitive amine oxidase substrates stimulate glucose transport and inhibit lipolysis in human adipocytes.},
   volume = {297},
   year = {2001},
}
